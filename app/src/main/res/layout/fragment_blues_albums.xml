<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="#f1f1f1"
    tools:context="com.example.al.genredemo.blues.bluesFragments.BluesAlbumsFragment">

    <RelativeLayout
        android:id="@+id/activity_blue_title"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/activity_main_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Top Blues Albums"
            android:textColor="@android:color/white"
            android:textSize="21sp" />

    </RelativeLayout>

<ListView
    android:id="@+id/list"
    android:layout_below="@id/activity_blue_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true" >
</ListView>

</RelativeLayout>
