<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.example.al.genredemo.misc.AnimatorActivity">

    <!--<RelativeLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="60dp">-->

        <Button
            android:id="@+id/animator_bt_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:text="start" />

        <TextView
            android:id="@+id/animator_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:textSize="23sp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:background="@android:color/holo_orange_light"
            android:text="Hello Android"/>

        <Button
            android:id="@+id/animator_bt_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:text="stop"/>

    <!--</RelativeLayout>-->

    <GridLayout
        android:id="@+id/animator_bottom"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:columnCount="3"
        android:minHeight="200dp"

        android:orientation="horizontal"
        android:rowCount="2"
        android:useDefaultMargins="true">


        <Button
            android:id="@+id/animator_trans"
            android:layout_width="110dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="trans" />

        <Button
            android:id="@+id/animator_scale"
            android:layout_width="110dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="scale" />

        <Button
            android:id="@+id/animator_color"
            android:layout_width="110dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="color" />

        <Button
            android:id="@+id/animator_char"
            android:layout_width="110dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="char" />

        <Button
            android:id="@+id/animator_alpha"
            android:layout_width="110dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="alpha" />

        <Button
            android:id="@+id/animator_rotation"
            android:layout_width="110dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="rotation" />


    </GridLayout>

</RelativeLayout>
